#include<iostream>
using namespace std;
 
int main() {
int i,n;
int num,S;
int sum=0;
 cout<<"How many number's average you have to find?"<<endl;
 cin>>n;

 for(i=1;i<=n;i++){
   cout<<"Enter a number"<<endl;
   cin>>num;

   S=sum+=i;

 }
 cout<<"Sum is= "<<S<<endl;
 cout<<"Average= "<<S/n<<endl;
    return 0;
}
