#include<iostream>
using namespace std;

int cars(int wheel, int seat, int body){
      return std::min(std::min(wheel/4,seat/2),body);
      }
  

int main() {
  int a,b,c;
  cout<<"enter number of wheels"<<endl;
  cin>>a;
  cout<<"enter number of seats"<<endl;
  cin>>b;
  cout<<"enter number of bodies"<<endl;
  cin>>c;

  cout<<"Cars can be made = "<<cars(a,b,c)<<endl;


    return 0;
}
