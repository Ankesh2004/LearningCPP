#include<stdio.h>

int main(){

    int n;
    scanf("%d",&n);

    for(int i=0;i<=n;i++){
        for(int j=0;j<n-i;j++){
            printf(" ");
        }

        int a=i;
        while(a>0){
            printf("%d",a);
            a--;
        }
        while(a<=i){
            printf("%d",a);
            a++;
        }

        printf("\n");
    }
    return 0;
}
